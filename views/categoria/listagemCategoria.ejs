<!-- IMPORTAÇÃO DO HEADER -->
<%- include('../partials/header') %>

    <!-- IMPORTAÇÃO DO MENU -->
    <div class="container-fluid">
        <%- include('../partials/menu') %>
    </div>

    <div class="card">
        <div class="card-header">LISTAGEM DE CATEGORIAS</div>
    </div>

    <% categorias.data.forEach(categoria=>{ %>

        <div class="card mt-2 p-1">

            <div class="card-body">
                <%= categoria.nome_categoria %>
            </div>

            <div class="btn-group mr-2">
                <a href="/editarCategoria/<%= categoria.cod_categoria %>" class="btn btn-warning">EDITAR</a>
                <a href="/excluirCategoria/<%= categoria.cod_categoria %>" class="btn btn-danger">EXCLUIR</a>
            </div>

        </div>

        <% }) %>

            <!-- IMPORTAÇÃO DO FOOTER -->
            <%- include('../partials/footer') %>